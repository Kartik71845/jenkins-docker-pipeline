pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('cloning') {
            steps {
                git url: "https://github.com/Kartik71845/Docker-Portfolio.git", branch: "main"
                echo 'cloning the code'
            }
        }
        stage('runnign the image') {
            steps {
                sh "docker compose up --build -d"
                echo 'running the code'
            }
        }
    }
}
